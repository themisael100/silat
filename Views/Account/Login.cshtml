@{
    ViewData["Title"] = "Iniciar sesión";
}

<div class="d-flex justify-content-center align-items-center vh-100 bg-light">
    <div class="card shadow border-0 rounded-4 overflow-hidden" style="max-width: 850px; width: 95%;">
        <div class="row g-0">

            <div class="col-md-6 d-flex flex-column justify-content-center align-items-center p-5 bg-white text-center">
                <div class="mb-4">
                    <img src="~/logo.png" alt="SILAT Logo" class="img-fluid p-2" style="max-height: 100px;">
                    </div>

                    @if (User.Identity != null && User.Identity.IsAuthenticated)
                    {
                        <div class="px-3">
                            <h4 class="fw-bold text-dark">¡Bienvenido de nuevo!</h4>
                            <p class="text-secondary">Ya has iniciado sesión correctamente.</p>
                            <p class="small text-muted mt-4">Redirigiendo al panel principal...</p>
                        </div>
                        <script>
                                            setTimeout(function () {
                                                window.location.href = '@Url.Action("Index", "Home")';
                                            }, 3000);
                        </script>
                    }
                    else
                    {
                        <div class="px-2">
                            <h4 class="fw-bold text-dark">¡Bienvenido!</h4>
                            <p class="text-secondary">Accede a la plataforma SILAT para gestionar tus servicios.</p>
                        </div>
                    }
                </div>

                <div class="col-md-6 p-5 bg-light border-start border-light d-flex flex-column justify-content-center">
                    @if (User.Identity == null || !User.Identity.IsAuthenticated)
                    {
                        <form method="post">
                            <div class="mb-3">
                                <label for="username" class="form-label small fw-bold text-secondary">Usuario</label>
                                <input id="username" name="username" required type="text"
                                       class="form-control form-control-lg border-0 shadow-sm rounded-3 fs-6">
                            </div>

                            <div class="mb-4">
                                <label for="password" class="form-label small fw-bold text-secondary">Contraseña</label>
                                <input id="password" name="password" required type="password"
                                       class="form-control form-control-lg border-0 shadow-sm rounded-3 fs-6"
                                       placeholder="••••••••">
                            </div>

                            <div class="d-grid gap-2 mb-4">
                                <button type="submit" class="btn btn-dark w-100 rounded-3 py-2 fw-bold btn-sm">
                                    Ingresar
                                </button>
                            </div>

                            <div class="text-center">
                                <hr class="text-muted opacity-25">
                                <p class="text-muted small mb-3">¿Eres nuevo en SILAT?</p>
                                <a asp-action="Register" class="btn btn-outline-secondary w-100 rounded-3 py-2 fw-bold btn-sm">
                                    Crear una cuenta
                                </a>
                            </div>
                        </form>
                    }
                    else
                    {
                        <div class="text-center">
                            <div class="spinner-border text-dark" style="width: 3rem; height: 3rem;" role="status">
                                <span class="visually-hidden"></span>
                            </div>
                            <p class="mt-3 fw-bold text-dark">Cargando...</p>
                        </div>
                    }
                </div>

            </div>
        </div>
    </div>