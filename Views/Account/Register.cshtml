@model Usuario
@{
    ViewData["Title"] = "Registro";
}

<div class="card shadow border-0 rounded-4 overflow-hidden mx-auto my-5" style="max-width: 950px;">
    <div class="row g-0">
        <div class="col-md-4 d-flex flex-column justify-content-center align-items-center p-5 bg-white text-center">
            <div class="mb-4">
                <img src="~/logo.png" alt="SILAT Logo" class="img-fluid p-2" style="max-height: 100px;">
            </div>

            <div class="px-2">
                <h4 class="fw-bold text-dark">Únete a nosotros</h4>
                <p class="text-secondary small">
                    Crea tu cuenta en SILAT y comienza a gestionar tus servicios de manera eficiente.
                </p>
            </div>

            @if (User.Identity != null && User.Identity.IsAuthenticated)
            {
                <div class="mt-4">
                    <div class="spinner-border text-dark" role="status"></div>
                </div>
            }
        </div>

        <div class="col-md-8 p-5 bg-light border-start border-light">
            @if (User.Identity != null && User.Identity.IsAuthenticated)
            {
                <div class="h-100 d-flex flex-column justify-content-center align-items-center text-center">
                    <h5 class="fw-bold">Ya has iniciado sesión</h5>
                    <p class="text-muted">Serás redirigido al inicio en unos segundos...</p>
                    <script>
                        setTimeout(function () {
                            window.location.href = '@Url.Action("Index", "Home")';
                        }, 3000);
                    </script>
                </div>
            }
            else
            {
                <h3 class="fw-bold mb-4 text-dark">Registro de nuevo usuario</h3>

                <form asp-action="Register" method="post">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label asp-for="Nombre" class="form-label small fw-bold text-secondary text-uppercase">Nombre Completo</label>
                            <div class="input-group">
                                <span class="input-group-text bg-white border-0">
                                    <i class="fas fa-user text-secondary"></i>
                                </span>
                                <input asp-for="Nombre" required class="form-control border-0 shadow-sm rounded-3 ps-0" />
                            </div>
                            <span asp-validation-for="Nombre" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="NombreUsuario" class="form-label small fw-bold text-secondary text-uppercase">Usuario</label>
                            <div class="input-group">
                                <span class="input-group-text bg-white border-0">
                                    <i class="fas fa-user-circle text-secondary"></i>
                                </span>
                                <input asp-for="NombreUsuario" required class="form-control border-0 shadow-sm rounded-3 ps-0" />
                            </div>
                            <span asp-validation-for="NombreUsuario" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="Correo" class="form-label small fw-bold text-secondary text-uppercase">Correo Electrónico</label>
                            <div class="input-group">
                                <span class="input-group-text bg-white border-0">
                                    <i class="fas fa-envelope text-secondary"></i>
                                </span>
                                <input asp-for="Correo" required type="email" class="form-control border-0 shadow-sm rounded-3 ps-0" />
                            </div>
                            <span asp-validation-for="Correo" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="Contrasenia" class="form-label small fw-bold text-secondary text-uppercase">Contraseña</label>
                            <div class="input-group">
                                <span class="input-group-text bg-white border-0">
                                    <i class="fas fa-lock text-secondary"></i>
                                </span>
                                <input asp-for="Contrasenia" required type="password" class="form-control border-0 shadow-sm rounded-3 ps-0" />
                            </div>
                            <span asp-validation-for="Contrasenia" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="Telefono" class="form-label small fw-bold text-secondary text-uppercase">Teléfono</label>
                            <div class="input-group">
                                <span class="input-group-text bg-white border-0">
                                    <i class="fas fa-phone text-secondary"></i>
                                </span>
                                <input asp-for="Telefono" required class="form-control border-0 shadow-sm rounded-3 ps-0" />
                            </div>
                            <span asp-validation-for="Telefono" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="Ciudad" class="form-label small fw-bold text-secondary text-uppercase">Ciudad</label>
                            <div class="input-group">
                                <span class="input-group-text bg-white border-0">
                                    <i class="fas fa-city text-secondary"></i>
                                </span>
                                <input asp-for="Ciudad" required class="form-control border-0 shadow-sm rounded-3 ps-0" />
                            </div>
                            <span asp-validation-for="Ciudad" class="text-danger small"></span>
                        </div>

                        <div class="col-12">
                            <label asp-for="Direccion" class="form-label small fw-bold text-secondary text-uppercase">Dirección</label>
                            <div class="input-group">
                                <span class="input-group-text bg-white border-0">
                                    <i class="fas fa-home text-secondary"></i>
                                </span>
                                <input asp-for="Direccion" required class="form-control border-0 shadow-sm rounded-3 ps-0" />
                            </div>
                            <span asp-validation-for="Direccion" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="Estado" class="form-label small fw-bold text-secondary text-uppercase">Estado / Depto</label>
                            <div class="input-group">
                                <span class="input-group-text bg-white border-0">
                                    <i class="fas fa-map-marker-alt text-secondary"></i>
                                </span>
                                <input asp-for="Estado" required class="form-control border-0 shadow-sm rounded-3 ps-0" />
                            </div>
                            <span asp-validation-for="Estado" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="CodigoPostal" class="form-label small fw-bold text-secondary text-uppercase">Código Postal</label>
                            <div class="input-group">
                                <span class="input-group-text bg-white border-0">
                                    <i class="fas fa-mail-bulk text-secondary"></i>
                                </span>
                                <input asp-for="CodigoPostal" required class="form-control border-0 shadow-sm rounded-3 ps-0" />
                            </div>
                            <span asp-validation-for="CodigoPostal" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="mt-4 pt-2">
                        <button type="submit" class="btn btn-dark w-100 rounded-3 py-2 fw-bold shadow-sm">
                            Registrarse ahora
                        </button>
                    </div>
                </form>

                <div class="text-center mt-4">
                    <p class="small text-muted mb-0">¿Ya tienes una cuenta?</p>
                    <a asp-action="Login" class="btn btn-link text-dark fw-bold text-decoration-none small">
                        Regresar al Iniciar sesión
                    </a>
                </div>
            }
        </div>
    </div>
</div>