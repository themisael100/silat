@using Microsoft.CodeAnalysis.Scripting
@model Usuario
@{
    ViewData["Title"] = "Registro";
}

<div class="d-flex justify-content-center align-items-center vh-100 bg-light">
    <div class="card shadow border-0 rounded-4 overflow-hidden" style="max-width: 950px; width: 95%;">
        <div class="row g-0">

            <div class="col-md-4 d-flex flex-column justify-content-center align-items-center p-5 bg-white text-center">
                <div class="mb-4">
                    <img src="~/logo.png" alt="SILAT Logo" class="img-fluid p-2" style="max-height: 100px;">
                    </div>

                    <div class="px-2">
                        <h4 class="fw-bold text-dark">Únete a nosotros</h4>
                        <p class="text-secondary small">Crea tu cuenta en SILAT y comienza a gestionar tus servicios de
                            manera eficiente.</p>
                        </div>

                        @if (User.Identity != null && User.Identity.IsAuthenticated)
                        {
                            <div class="mt-4">
                                <div class="spinner-border text-dark" role="status"></div>
                            </div>
                        }
                    </div>

                    <div class="col-md-8 p-5 bg-light border-start border-light">
                        @if (User.Identity != null && User.Identity.IsAuthenticated)
                        {
                            <div class="h-100 d-flex flex-column justify-content-center align-items-center text-center">
                                <h5 class="fw-bold">Ya has iniciado sesión</h5>
                                <p class="text-muted">Serás redirigido al inicio en unos segundos...</p>
                                <script>
                                                        setTimeout(function () {
                                                            window.location.href = '@Url.Action("Index", "Home")';
                                                        }, 3000);
                                </script>
                            </div>
                        }
                        else
                        {
                            <h3 class="fw-bold mb-4 text-dark">Registro de nuevo usuario</h3>

                            <form asp-action="Register" method="post">
                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <label asp-for="Nombre"
                                               class="form-label small fw-bold text-secondary text-uppercase">Nombre Completo</label>
                                        <input asp-for="Nombre" class="form-control border-0 shadow-sm rounded-3" />
                                        <span asp-validation-for="Nombre" class="text-danger small"></span>
                                    </div>

                                    <div class="col-md-6">
                                        <label asp-for="NombreUsuario"
                                               class="form-label small fw-bold text-secondary text-uppercase">Usuario</label>
                                        <input asp-for="NombreUsuario" class="form-control border-0 shadow-sm rounded-3" />
                                        <span asp-validation-for="NombreUsuario" class="text-danger small"></span>
                                    </div>

                                    <div class="col-md-6">
                                        <label asp-for="Correo"
                                               class="form-label small fw-bold text-secondary text-uppercase">Correo
                                            Electrónico</label>
                                            <input asp-for="Correo" type="email" class="form-control border-0 shadow-sm rounded-3" />
                                            <span asp-validation-for="Correo" class="text-danger small"></span>
                                        </div>

                                        <div class="col-md-6">
                                            <label asp-for="Contrasenia"
                                                   class="form-label small fw-bold text-secondary text-uppercase">Contraseña</label>
                                            <input asp-for="Contrasenia" type="password"
                                                   class="form-control border-0 shadow-sm rounded-3" placeholder="••••••••" />
                                            <span asp-validation-for="Contrasenia" class="text-danger small"></span>
                                        </div>

                                        <div class="col-md-6">
                                            <label asp-for="Telefono"
                                                   class="form-label small fw-bold text-secondary text-uppercase">Teléfono</label>
                                            <input asp-for="Telefono" class="form-control border-0 shadow-sm rounded-3"
                                                   placeholder="+503..." />
                                            <span asp-validation-for="Telefono" class="text-danger small"></span>
                                        </div>

                                        <div class="col-md-6">
                                            <label asp-for="Ciudad"
                                                   class="form-label small fw-bold text-secondary text-uppercase">Ciudad</label>
                                            <input asp-for="Ciudad" class="form-control border-0 shadow-sm rounded-3" />
                                            <span asp-validation-for="Ciudad" class="text-danger small"></span>
                                        </div>

                                        <div class="col-12">
                                            <label asp-for="Direccion"
                                                   class="form-label small fw-bold text-secondary text-uppercase">Dirección</label>
                                            <input asp-for="Direccion" class="form-control border-0 shadow-sm rounded-3" />
                                            <span asp-validation-for="Direccion" class="text-danger small"></span>
                                        </div>

                                        <div class="col-md-6">
                                            <label asp-for="Estado"
                                                   class="form-label small fw-bold text-secondary text-uppercase">Estado / Depto</label>
                                            <input asp-for="Estado" class="form-control border-0 shadow-sm rounded-3" />
                                            <span asp-validation-for="Estado" class="text-danger small"></span>
                                        </div>

                                        <div class="col-md-6">
                                            <label asp-for="CodigoPostal"
                                                   class="form-label small fw-bold text-secondary text-uppercase">Código Postal</label>
                                            <input asp-for="CodigoPostal" class="form-control border-0 shadow-sm rounded-3" />
                                            <span asp-validation-for="CodigoPostal" class="text-danger small"></span>
                                        </div>
                                    </div>

                                    <div class="mt-4 pt-2">
                                        <button type="submit" class="btn btn-dark w-100 rounded-3 py-2 fw-bold shadow-sm">
                                            Registrarse ahora
                                        </button>
                                    </div>
                                </form>

                                <div class="text-center mt-4">
                                    <p class="small text-muted mb-0">¿Ya tienes una cuenta?</p>
                                    <a asp-action="Login" class="btn btn-link text-dark fw-bold text-decoration-none small">
                                        Regresar al Iniciar sesión
                                    </a>
                                </div>
                            }
                        </div>

                    </div>
                </div>
            </div>