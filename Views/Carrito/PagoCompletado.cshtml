@model Pedido

@{
    ViewData["Title"] = "Pago Completado";
}

<div class="container my-5">

    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
                    <div class="d-flex align-items-center gap-3">
                        <img src="~/silat.svg" alt="SILAT" height="45" />
                        <div>
                            <h5 class="mb-0 fw-bold">SILAT</h5>
                            <small class="text-warning">Comprobante de compra</small>
                        </div>
                    </div>
                    <span class="badge bg-success fs-6 px-3 py-2">
                        @Model.Estado
                    </span>
                </div>

                <div class="card-body p-4">

                    <div class="alert alert-light border text-center mb-4">
                        <h4 class="fw-bold mb-1">¡Gracias por su compra!</h4>
                        <p class="mb-0 text-muted">
                            Hemos recibido un pago por un monto de
                            <strong class="text-dark">@Model.Total.ToString("C")</strong>
                        </p>
                    </div>

                    <div class="row mb-4">

                        <div class="col-md-6">
                            <h6 class="text-uppercase fw-bold text-muted">Detalle del pedido</h6>
                            <table class="table table-sm table-borderless">
                                <tr>
                                    <th>N° Pedido:</th>
                                    <td>#@Model.PedidoId</td>
                                </tr>
                                <tr>
                                    <th>Fecha:</th>
                                    <td>@Model.Fecha</td>
                                </tr>
                                <tr>
                                    <th>Estado:</th>
                                    <td>
                                        <span class="badge bg-success">@Model.Estado</span>
                                    </td>
                                </tr>
                            </table>
                        </div>

                        <div class="col-md-6 text-md-end">
                            <h6 class="text-uppercase fw-bold text-muted">Total pagado</h6>
                            <h2 class="fw-bold text-warning">
                                @Model.Total.ToString("C")
                            </h2>
                        </div>

                    </div>

                    <h6 class="text-uppercase fw-bold text-muted mb-3">
                        Productos adquiridos
                    </h6>

                    <div class="table-responsive">
                        <table class="table table-hover align-middle">
                            <thead class="table-dark">
                                <tr>
                                    <th>Producto</th>
                                    <th class="text-center">Cantidad</th>
                                    <th class="text-end">Precio</th>
                                    <th class="text-end">Subtotal</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var detallepedido in ViewBag.DetallePedidos)
                                {
                                    var subtotal = detallepedido.Cantidad * detallepedido.Precio;
                                    <tr>
                                        <td>@detallepedido.Producto.Nombre</td>
                                        <td class="text-center">@detallepedido.Cantidad</td>
                                        <td class="text-end">@detallepedido.Precio.ToString("C")</td>
                                        <td class="text-end fw-bold">@subtotal.ToString("C")</td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr class="table-light">
                                    <th colspan="3" class="text-end fs-5">
                                        Total
                                    </th>
                                    <th class="text-end fs-5 text-warning">
                                        @Model.Total.ToString("C")
                                    </th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>

                <div class="card-footer bg-light text-center">
                    <small class="text-muted">
                        SILAT © @DateTime.Now.Year · Gracias por confiar en nosotros
                    </small>
                </div>

            </div>
        </div>
    </div>
</div>