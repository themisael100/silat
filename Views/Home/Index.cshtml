@using Microsoft.CodeAnalysis.Scripting
@using Microsoft.AspNetCore.Routing
@model List<Producto>
@{
    ViewData["Title"] = "Home - Silat";
}

<div class="container py-4">
    <div id="myCarousel" class="carousel slide carousel-dark mb-4" data-bs-ride="carousel">
        <div class="carousel-inner rounded-3 shadow">
            @{
                var first = true;
            }
            @foreach (var item in ViewBag.Banners)
            {
                <div class="carousel-item @(first ? "active" : "")">
                    <div class="ratio ratio-21x9">
                        <img src="@item.ImageUrl" class="d-block w-100 h-100 object-fit-cover" alt="Banner">
                    </div>
                </div>
                first = false;
            }
        </div>

        <!-- Controles -->
        <button class="carousel-control-prev" type="button" data-bs-target="#myCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#myCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>

        <!-- Indicadores -->
        <div class="carousel-indicators">
            @{
                var index = 0;
            }
            @foreach (var item in ViewBag.Banners)
            {
                <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="@index"
                        class="@(index == 0 ? "active" : "")" aria-current="@(index == 0 ? "true" : "false")"
                        aria-label="Slide @(index + 1)"></button>
                index++;
            }
        </div>
    </div>


    <!-- Título de la sección -->
    <h2 class="fw-bold mb-4 pb-2 border-bottom border-primary border-3"
        style="border-width: 3px !important; width: fit-content;">
        Productos destacados
    </h2>

    <!-- Contenedor de productos -->
    <div class="row g-4" id="productosContainer">
        @foreach (var producto in Model)
        {
            <div class="col-md-4 col-sm-6 mb-4 productoItem">
                <div class="card h-100 shadow-sm">
                    <div class="position-relative overflow-hidden bg-light">
                        @if (producto.Stock > 0 && producto.Stock < 10)
                        {
                            <span class="position-absolute top-0 end-0 m-2 badge rounded-pill bg-primary text-white">
                                <i class="fas fa-fire me-1"></i> ¡Últimas unidades!
                            </span>
                        }
                        <a href="@Url.Action("DetalleProducto", "Home", new { id = producto.ProductoId })">
                            <img class="card-img-top p-3 img-fluid" src="@producto.Imagen" alt="@producto.Nombre"
                                 style="height: 250px; object-fit: contain; background-color: white;">
                        </a>
                    </div>

                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title fw-bold text-dark mb-2 text-center">
                            <a href="@Url.Action("DetalleProducto", "Home", new { id = producto.ProductoId })"
                                   class="text-decoration-none text-primary">
                                @producto.Nombre
                            </a>
                        </h5>

                        <p class="card-text text-muted small mb-3">@producto.Descripcion</p>

                        <div class="mb-3">
                            <span class="badge bg-light text-dark border">
                                <i class="fas fa-tag"></i> Modelo: @producto.Modelo
                            </span>
                        </div>

                        <h4 class="fw-bold text-primary mb-3">
                            @String.Format("{0:C}", producto.Precio)
                        </h4>

                        <div class="mt-auto">
                            @if (producto.Stock <= 0)
                            {
                                <div class="alert alert-danger mb-0" role="alert">
                                    <i class="fas fa-exclamation-circle"></i> Producto agotado
                                </div>
                            }
                            else
                            {
                                <form method="post" action="@Url.Action("AgregarProductoIndex")" class="d-flex">
                                    <input type="hidden" name="id" value="@producto.ProductoId" />

                                    <div class="input-group">
                                        <input type="number" class="form-control text-center shadow-none border-primary"
                                               name="cantidad" value="1" min="1" max="@producto.Stock"
                                               style="width: 60px; border-radius: 50px 0 0 50px; border-right: none;">

                                        <button type="submit" class="btn btn-primary fw-bold flex-grow-1"
                                                style="border-radius: 0 50px 50px 0;">
                                            <i class="fas fa-cart-plus"></i> Agregar
                                        </button>
                                    </div>
                                </form>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@{
    string? controllerName = Context.GetRouteValue("controller") as string;
    string? actionName = Context.GetRouteValue("action") as string;
}
<script>
    var controllerName = '@controllerName';
    var actionName = '@actionName';
</script>