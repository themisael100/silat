@using System.Linq;
@{
    ViewData["Title"] = "Perfil de usuario";
}

<div class="bg-primary text-white py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-auto">
                <div class="bg-white text-primary rounded-circle d-flex align-items-center justify-content-center fw-bold"
                    style="width: 120px; height: 120px; font-size: 3rem;">
                    @Model.Nombre.Substring(0, 1).ToUpper()
                </div>
            </div>
            <div class="col">
                <h2 class="mb-1">@Model.Nombre</h2>
                <p class="mb-0 opacity-75"><i class="fa-solid fa-at"></i> @Model.NombreUsuario</p>
            </div>
        </div>
    </div>
</div>

<div class="container py-4">
    <div class="row">
        <div class="col-lg-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title border-bottom pb-3 mb-3">
                        <i class="fa-solid fa-circle-user text-primary"></i>
                        Información Personal
                    </h5>

                    <div class="mb-3 pb-3 border-bottom">
                        <small class="text-muted d-block mb-1">
                            <i class="fa-solid fa-id-badge"></i> Usuario
                        </small>
                        <div class="fw-normal">@Model.NombreUsuario</div>
                    </div>

                    <div class="mb-3 pb-3 border-bottom">
                        <small class="text-muted d-block mb-1">
                            <i class="fa-solid fa-envelope"></i> Email
                        </small>
                        <div class="fw-normal">@Model.Correo</div>
                    </div>

                    <div class="mb-3 pb-3 border-bottom">
                        <small class="text-muted d-block mb-1">
                            <i class="fa-solid fa-user"></i> Nombre
                        </small>
                        <div class="fw-normal">@Model.Nombre</div>
                    </div>

                    <div class="mb-0">
                        <small class="text-muted d-block mb-1">
                            <i class="fa-solid fa-phone"></i> Teléfono
                        </small>
                        <div class="fw-normal">@Model.Telefono</div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-4 border-bottom pb-3">
                        <h5 class="card-title mb-0">
                            <i class="fa-solid fa-location-dot text-primary"></i>
                            Direcciones
                        </h5>
                        <a asp-action="AgregarDireccion" class="btn btn-primary" asp-route-id="@Model.UsuarioId">
                            <i class="fa-solid fa-circle-plus"></i> Agregar dirección
                        </a>
                    </div>

                    @if (Model.Direcciones.Count > 0)
                    {
                        @foreach (var direccion in Model.Direcciones)
                        {
                            <div class="card border-start border-primary border-4 mb-3">
                                <div class="card-body">
                                    <div class="row g-3">
                                        <div class="col-md-6">
                                            <small class="text-muted d-block mb-1">
                                                <i class="fa-solid fa-house"></i> Dirección
                                            </small>
                                            <div class="fw-normal">@direccion.Adress</div>
                                        </div>
                                        <div class="col-md-6">
                                            <small class="text-muted d-block mb-1">
                                                <i class="fa-solid fa-building"></i> Ciudad
                                            </small>
                                            <div class="fw-normal">@direccion.Ciudad</div>
                                        </div>
                                        <div class="col-md-6">
                                            <small class="text-muted d-block mb-1">
                                                <i class="fa-solid fa-map"></i> Estado
                                            </small>
                                            <div class="fw-normal">@direccion.Estado</div>
                                        </div>
                                        <div class="col-md-6">
                                            <small class="text-muted d-block mb-1">
                                                <i class="fa-solid fa-envelopes-bulk"></i> Código Postal
                                            </small>
                                            <div class="fw-normal">@direccion.CodigoPostal</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }

                        <div class="alert alert-light text-center mb-0">
                            <i class="fa-solid fa-circle-info"></i>
                            <small>Puedes agregar múltiples direcciones para tus envíos</small>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning text-center">
                            <i class="fa-solid fa-triangle-exclamation"></i>
                            <p class="mb-0">No hay direcciones disponibles</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>