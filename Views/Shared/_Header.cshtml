@using System.Security.Claims

<header class="shadow-sm">
    <div class="border-bottom bg-white">
        <div class="container-fluid px-5 py-3">
            <div class="row align-items-center">
                <!-- LOGO -->
                <div class="col-lg-3 col-md-4 text-md-start text-center mb-3 mb-md-0">
                    <a asp-controller="Home" asp-action="Index"
                           class="text-decoration-none d-inline-flex align-items-center">
                        <img src="~/logo.png" alt="Silat Logo" style="height: 40px; width: auto;" class="img-fluid" />
                    </a>
                </div>
                <div class="col-lg-6 col-md-5 mb-3 mb-md-0">
                    <form asp-controller="Home" asp-action="Productos" method="get">
                        <div class="input-group">
                            <input type="search" name="busqueda" class="form-control" placeholder="Buscar productos">
                            <button class="btn btn-outline-warning" type="submit">
                                <i class="fa-solid fa-magnifying-glass"></i>
                            </button>
                        </div>
                    </form>
                </div>
                <div class="col-lg-3 col-md-3 text-md-end text-center">
                    <div class="fw-semibold"><i class="fa-solid fa-headset"></i>Servicio al cliente</div>
                    <div class="fw-bold"><i class="fa-solid fa-phone"></i>+503 1234-5678</div>
                </div>

            </div>
        </div>
    </div>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid px-5">
            <div class="dropdown me-3">
                <button class="btn btn-warning dropdown-toggle d-flex align-items-center" type="button"
                        data-bs-toggle="dropdown">
                    <i class="fa-solid fa-bars me-2"></i>
                    Categorias
                </button>

                <div class="dropdown-menu p-0 shadow-lg border-0 rounded-3 overflow-hidden" style="min-width: 300px;">
                    <div class="bg-warning p-3">
                        <h6 class="mb-0 fw-bold text-dark">
                            <i class="fa-solid fa-list me-2"></i>Todas las Categorías
                        </h6>
                    </div>
                    <div class="p-2">
                        @await Component.InvokeAsync("CategoriasMenu")
                    </div>
                </div>
            </div>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="mainNavbar">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Productos">Productos</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Contacto</a>
                    </li>
                </ul>
            </div>
            <div class="d-flex align-items-center gap-3">
                <a class="position-relative text-white text-decoration-none" asp-controller="Carrito"
                       asp-action="Index">
                    <i class="fa-solid fa-cart-shopping fs-5"></i>
                    <span class="position-absolute top-0 start-100 translate-middle
                        badge rounded-pill bg-warning text-dark" style="font-size: 0.7rem;">
                        @ViewBag.NumeroProductos
                    </span>
                </a>
                @if (User.Identity != null && User.Identity.IsAuthenticated)
                {
                    string nombreUsuario = User.Identity.Name ?? "Usuario";
                    string idUsuario = User.FindFirstValue(ClaimTypes.NameIdentifier)!;

                    <div class="dropdown">
                        <a class="nav-link dropdown-toggle text-white fw-medium d-flex align-items-center" href="#"
                               data-bs-toggle="dropdown" style="cursor: pointer;">
                            <i class="fa-regular fa-user me-2"></i> @nombreUsuario
                        </a>

                        <ul class="dropdown-menu dropdown-menu-end shadow border-0">
                            <li>
                                <a class="dropdown-item" asp-controller="Perfil" asp-action="Details"
                                       asp-route-id="@idUsuario">
                                    <i class="fa-solid fa-id-card me-2"></i> Mi Perfil
                                </a>
                            </li>
                            @if (User.IsInRole("Administrador"))
                            {
                                <li>
                                    <a class="dropdown-item" asp-controller="Dashboard" asp-action="Index">
                                        <i class="fa-solid fa-gauge me-2"></i> Dashboard
                                    </a>
                                </li>
                            }
                            <li>
                                <hr class="dropdown-divider">
                            </li>
                            <li>
                                <a class="dropdown-item text-danger" asp-controller="Account" asp-action="Logout">
                                    <i class="fa-solid fa-right-from-bracket me-2"></i>
                                    Cerrar sesión
                                </a>
                            </li>
                        </ul>
                    </div>
                }
                else
                {
                    <a class="nav-link text-white fw-medium d-flex align-items-center text-decoration-none"
                           asp-controller="Account" asp-action="Login">
                        <i class="fa-regular fa-user me-2"></i>
                        Iniciar Sesión
                    </a>
                }
            </div>
        </div>
    </div>
</nav>
</header>